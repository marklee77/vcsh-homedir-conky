background no

alignment bottom_right
gap_x 25
gap_y 10

own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

uppercase no
double_buffer yes
draw_borders no
draw_outline no
draw_shades no
use_xft yes
xftalpha 0.8
xftfont DejaVu Sans Mono for Powerline-9:style=Book

#update_interval 10
text_buffer_size 10240

default_color 268bd2
color0 b58900

TEXT
${color0}$nodename - $sysname $kernel on $machine
${color}$hr
${color0}Uptime:$color $uptime
${color0}Frequency:$color ${freq}MHz
${color0}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color0}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
${color0}CPU Usage:$color $cpu% ${cpubar 4}
${color0}Processes:$color $processes  
${color}$hr
${color0}Name              PID   CPU%   MEM%
${color} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
${color}$hr
${color0}File systems:
 / $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color}$hr
${color0}Entropy:$color ${entropy_bar}
${color}$hr
${color0}${execpi 300 gcalcli-conky}
