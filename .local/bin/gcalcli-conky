#!/bin/bash

if ! nm-online -x || ! ping -c 1 8.8.8.8 2>&1 >/dev/null; then
    exit 0
fi

gcalcli \
    --calendar="Mark Stillwell" \
    --calendar="Work" \
    --calendar="Family" \
    --calendar="Mark Lee Stillwell (TripIt)" \
    --nocolor --conky -w 12 calw 2 |
    sed -e 's/(0\x71(B/‚îÄ/g' \
        -e 's/(0\x78(B/‚îÇ/g' \
        -e 's/(0\x6A(B/‚îò/g' \
        -e 's/(0\x6B(B/‚îê/g' \
        -e 's/(0\x6C(B/‚îå/g' \
        -e 's/(0\x6D(B/‚îî/g' \
        -e 's/(0\x6E(B/‚îº/g' \
        -e 's/(0\x74(B/‚îú/g' \
        -e 's/(0\x75(B/‚î§/g' \
        -e 's/(0\x76(B/‚î¥/g' \
        -e 's/(0\x77(B/‚î¨/g'

